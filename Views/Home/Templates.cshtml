@model IEnumerable<SurveyForm.Data.Template>

@{
    ViewBag.Title = "Templates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Templates</h2>

<p>
    @Html.ActionLink("Create New", "CreateTemplate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("View", "TemplateDetail", new { templateId = item.TemplateId }) |
                @Html.ActionLink("Delete", "DeleteTemplate", new { templateId = item.TemplateId })
            </td>
        </tr>
    }

</table>
